<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bullrunmarketapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/usflogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/usflogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TruckInterface"
            android:label="@string/title_activity_truck_interface"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TruckSelection"
            android:label="@string/title_activity_truck_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>