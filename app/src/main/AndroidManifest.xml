<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bullrunmarketapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/usflogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/usflogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".Checkout" />
        <activity android:name=".About" />
        <activity
            android:name=".pizzatime"
            android:label="@string/title_activity_pizzatime"
            android:parentActivityName=".pizza_layout"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bullrunmarketapplication.pizza_layout" />
        </activity>
        <activity
            android:name=".pizza_layout"
            android:label="@string/title_activity_pizza_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".hyderabadi_delight"
            android:label="@string/title_activity_hyderabadi_delight"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".hyderabadi_layout"
            android:label="@string/title_activity_hyderabadi_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TruckInterface"
            android:label="@string/title_activity_truck_interface"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_truck_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TruckSelection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>